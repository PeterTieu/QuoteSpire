<?xml version="1.0" encoding="utf-8"?>




<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/favorite_quote_category_bubble_layout"
    android:background="@color/FavoriteQuotesAndMyQuotesListItems"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="14dp"
    android:layout_marginRight="14dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="0dp"
    android:orientation="vertical"
    android:paddingLeft="-20dp"
    android:paddingRight="-20dp"
    android:paddingTop="-10dp"
    android:paddingBottom="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/favorite_quote_author_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/colorAccent"
                android:textIsSelectable="true"
                android:textSize="11dp"
                android:textStyle="bold"/>

        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:orientation="horizontal">



            <CheckBox
                android:id="@+id/favorite_quote_favorite_icon"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:paddingRight="-22dp"
                android:gravity="right"
                android:src="@drawable/ic_imageview_favorite_on"/>


            <Button
                android:id="@+id/favorite_quote_share_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_button_share"
                android:gravity="right"/>


        </LinearLayout>





    </LinearLayout>

    <!--<ProgressBar-->
        <!--android:id="@+id/progress_bar_favorite_quote"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_marginTop="35dp"-->
        <!--android:paddingBottom="10dp"/>-->


    <TextView
        android:id="@+id/favorite_quote_quote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="-10dp"
        android:gravity="left"
        android:textColor="@color/white"
        android:textIsSelectable="true"
        android:textSize="11dp"
        android:textStyle="italic"/>


</LinearLayout>






