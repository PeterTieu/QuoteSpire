<?xml version="1.0" encoding="utf-8"?>

<!--Dialog fragment layout - for Pix delete confirmation-->

<android.support.v7.widget.AlertDialogLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_fragment_add_new_my_quote"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/delete_my_quote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="top"
            android:maxLength="100"
            android:maxLines="1"
            android:inputType="textCapWords"
            android:textSize="20dp"
            android:hint="@string/enter_the_quote_author"/>



        <EditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="top"
            android:maxLines="8"
            android:inputType="textCapSentences"
            android:textSize="18dp"
            android:hint="@string/enter_the_quote"/>



    </LinearLayout>





</android.support.v7.widget.AlertDialogLayout>