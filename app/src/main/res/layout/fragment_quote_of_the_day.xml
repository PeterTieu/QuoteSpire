<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout

        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




        <LinearLayout
            android:id="@+id/quote_of_the_day_quote_bubble_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            android:paddingLeft="-20dp"
            android:paddingRight="-20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="20dp">


                <TextView
                    android:id="@+id/quote_of_the_day_quote_title"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/quote_of_the_day"
                    android:textColor="@color/colorAccent"
                    android:textSize="17dp"
                    android:textStyle="bold"/>


                <CheckBox
                    android:id="@+id/quote_of_the_day_quote_favorite_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_imageview_favorite_on"/>


                <Button
                    android:id="@+id/quote_of_the_day_quote_share_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/ic_button_share"
                    android:gravity="right"/>


            </LinearLayout>


            <ProgressBar
                android:id="@+id/progress_bar_quote_of_the_day_quote_quote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:paddingBottom="10dp"/>


            <TextView
                android:id="@+id/quote_of_the_day_quote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="-10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textIsSelectable="true"
                android:textSize="14dp"
                android:textStyle="italic"/>


            <TextView
                android:id="@+id/quote_of_the_day_quote_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:textColor="@color/colorAccent"
                android:textIsSelectable="true"
                android:textSize="14dp"/>


            <TextView
                android:id="@+id/quote_of_the_day_quote_category"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="20dp"
                android:textColor="@color/colorAccent"
                android:textSize="14dp"/>

        </LinearLayout>





























        <LinearLayout
            android:id="@+id/quote_of_the_day_author_bubble_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingLeft="-20dp"
            android:paddingRight="-20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/quote_of_the_day_author_quote_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/also_from"
                        android:textColor="@color/colorAccent"
                        android:textSize="14dp"/>


                    <TextView
                        android:id="@+id/quote_of_the_day_author_quote_title_author_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="14dp"
                        android:textStyle="bold"/>

                </LinearLayout>


                <CheckBox
                    android:id="@+id/quote_of_the_day_author_quote_favorite_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="-5dp"
                    android:src="@drawable/ic_imageview_favorite_off"/>


                <Button
                    android:id="@+id/quote_of_the_day_author_quote_share_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="-5dp"
                    android:background="@drawable/ic_button_share"
                    android:gravity="right"/>


            </LinearLayout>


            <ProgressBar
                android:id="@+id/progress_bar_quote_of_the_day_author_quote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:paddingBottom="10dp"/>


            <TextView
                android:id="@+id/quote_of_the_day_author_quote_quote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="-10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textIsSelectable="true"
                android:textSize="14dp"
                android:textStyle="italic"/>


            <TextView
                android:id="@+id/quote_of_the_day_author_quote_quote_unavailable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginRight="110dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/there_are_no_more_quoes_from_this_author"
                android:textColor="@color/orange"
                android:textSize="16dp"/>


            <TextView
                android:id="@+id/quote_of_the_day_author_quote_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:textColor="@color/colorAccent"
                android:textIsSelectable="true"
                android:textSize="14dp"/>


            <TextView
                android:id="@+id/quote_of_the_day_author_quote_category"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="20dp"
                android:textColor="@color/colorAccent"
                android:textSize="14dp"/>

        </LinearLayout>





















        <LinearLayout
            android:id="@+id/quote_of_the_day_category_bubble_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingLeft="-20dp"
            android:paddingRight="-20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/quote_of_the_day_category_quote_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/also_on"
                        android:textColor="@color/colorAccent"
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/quote_of_the_day_category_quote_title_category_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="14dp"
                        android:textStyle="bold"/>


                </LinearLayout>


                <CheckBox
                    android:id="@+id/quote_of_the_day_category_quote_favorite_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_imageview_favorite_off"/>


                <Button
                    android:id="@+id/quote_of_the_day_category_quote_share_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/ic_button_share"
                    android:gravity="right"/>


            </LinearLayout>


            <ProgressBar
                android:id="@+id/progress_bar_quote_of_the_day_category_quote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:paddingBottom="10dp"/>


            <TextView
                android:id="@+id/quote_of_the_day_category_quote_quote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="-10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textIsSelectable="true"
                android:textSize="14dp"
                android:textStyle="italic"/>


            <TextView
                android:id="@+id/quote_of_the_day_category_quote_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:textColor="@color/colorAccent"
                android:textIsSelectable="true"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/quote_of_the_day_category_quote_category"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="20dp"
                android:textColor="@color/colorAccent"
                android:textSize="14dp"/>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="15dp">
        </View>


    </LinearLayout>

</ScrollView>