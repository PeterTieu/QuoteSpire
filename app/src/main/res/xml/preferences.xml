<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">


    <PreferenceCategory
        android:key="@string/contents"
        android:title="@string/contents">
        <Preference
            android:key="@string/application_theme_preference"
            android:title="@string/application_theme"
            android:summary="@string/theme_info"/>
        <Preference
            android:key="@string/clear_queries_preference"
            android:title="@string/clear_queries"
            android:summary="@string/clear_all_recent_search_queries"/>
    </PreferenceCategory>




    <PreferenceCategory
        android:key="quote_of_the_day"
        android:title="@string/quote_of_the_day">
        <CheckBoxPreference
            android:key="@string/daily_notification_checkbox_preference"
            android:title="@string/daily_notification"
            android:summary="@string/notify_me_when_a_new_quote_of_the_day_is_available"
            android:defaultValue="true"/>
        <Preference
            android:key="@string/quote_of_the_day_check_time_preference"
            android:title="@string/quote_of_the_day_check_time"
            android:dependency="daily_notification_checkbox_preference"
            android:summary="@string/time_the_check_if_a_new_quote_of_the_day_is_avaialable"/>
    </PreferenceCategory>



    <PreferenceCategory
        android:key="general"
        android:title="@string/general">
        <Preference
            android:key="@string/share_app_preference"
            android:title="@string/share_app"
            android:summary="@string/tell_your_friends_about_this_app"/>
        <Preference
            android:key="@string/about_app_preference"
            android:title="@string/about_app"
            android:summary="@string/information_about_this_app"/>
    </PreferenceCategory>


</PreferenceScreen>